<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingLeft="1dp">
	<ImageView android:id="@+id/subcat_image"
		android:layout_width="wrap_content" android:layout_gravity="center_vertical"
		android:layout_height="wrap_content" android:layout_margin="2dp"
		android:src="@+drawable/icon_emission" />
	<TextView android:id="@+id/subcat_title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="22sp"
		android:layout_gravity="center_vertical" android:padding="5dp"
		android:textStyle="bold" />
</LinearLayout>